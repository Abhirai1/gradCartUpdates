<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap Linking -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

  <!-- <CSS Linking -->
  <link rel="stylesheet" href="\css\home.css">

  <!-- Font Awesome Linking -->
  <script src="https://kit.fontawesome.com/49bfe0f85e.js" crossorigin="anonymous"></script>

  <!-- Text Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">

<!-- AOS ANIMATION -->
  <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />


  <title>GradCaRT</title>
</head>

<body>
  {{!-- {{navbar}} --}}
  <!-- Top Border -->
  <div id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h1 id="logo">GradCaRT</h1>
        </div>
        <div class="col-md-8">
          <ul id="menu" class="float-md-right">
    {{#if isAuthenticated}}
        <li><a href="./addProduct"><i class="fa-solid fa-cart-shopping lead"></i> Add Product</a></li>
        <li><a href="./myProducts"><i class="fa-solid fa-bag-shopping lead"></i> My Products</a></li>
        <li><a href="/"><i class="fa-solid fa-sign-out-alt lead"></i> Logout</a></li>
    {{else}}
      <li class="nav-item">
            <a class="nav-link text-dark " href="./login">Login</a>
          </li>
          <li class="nav-item">
            {{!-- .hbs ki need nhi thi, simple se kaam chal jata --}}
            <a class="nav-link text-dark" href="./register">Register</a>
          </li>
     {{!-- <li><a href="./addProduct"><i class="fa-solid fa-cart-shopping lead"></i> Add Product</a></li> --}}
        {{!-- <li><a href="./myProducts"><i class="fa-solid fa-bag-shopping lead"></i> My Products</a></li> --}}
    {{/if}}
    <li><a href=""><i class="fa-solid fa-arrow-right-arrow-left lead"></i> For Exchange</a></li>
    <li><a href=""><i class="fa-solid fa-address-book lead"></i> Contact Us</a></li>
</ul>
          <span class="navbar-text">
          Welcome, {{ username }}
        </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Search Bar -->
    <section id="searchbar">
        <div class="search">
            <form action="/search" method="GET">
                <div class="form-group">
                    <label for="category">Select Category:</label>
                    <select class="form-control" id="category" name="category">
                        <option value="Books">Books</option>
                        <option value="Mobile Accessories">Mobile Accessories</option>
                        <option value="Computer Accessories">Computer Accessories</option>
                        <option value="College Accessories">College Accessories</option>
                        <!-- Add more options as needed -->
                    </select>
                </div>
                <div class="form-group">
                    {{!-- <input type="text" class="form-control" id="search" name="search" placeholder="Search"> --}}
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </section>

  <!-- Main Section -->

  <section id="sell">
    <div class="container m-auto">
      <div class="row">
        <div class="col-lg-6 col-12 m-auto" data-aos="fade-up">
          <h2 class="text-secondary">The buyer needs a hundred eyes <br>the seller not one</h2>
          <button type="button" class="btn btn-secondary px-5 btn-mt-10 m-3" data-toggle="button" aria-pressed="false" autocomplete="off">Explore</button>
        </div>
        <div class="col-lg-6 col-12 hero-img " data-aos="fade-left">
          <img class="img-fluid" src="images/sell.jpg" alt="">
        </div>
      </div>
    </div>
  </section>
  <hr class="rule m-auto">
  <section id="buy">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-12" data-aos="fade-right">
          <img class="img-fluid" src="images/buy.jpg" alt="">
        </div>
        <div class="col-lg-6 col-12 m-auto" data-aos="fade-left">
          <h2 class="text-secondary m-3">People don’t like to be sold,
            but they love to buy</h2>
          <button type="button" class="btn btn-secondary px-5 m-3" data-toggle="button" aria-pressed="false" autocomplete="off">Explore</button>
        </div>
      </div>
    </div>
  </section>


  <!-- Categories Section -->
  <section id="categories">
    <div class="container">
      <h2 class="text-center py-3">Categories</h2>
      <div class="row">
        <div class="col-lg-3 col-md-6 col-12">
          <div class="card" data-aos="fade-right">
            <img src="images/books.png" alt="books" class="card-img-top">
            <div class="card-body text-center">
              <h3>Books Accesories</h3>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12" data-aos="fade-right">
          <div class="card">
            <img src="images/phone.png" alt="Book" class="card-img-top">
            <div class="card-body text-center">
              <h3 class="card-title">Mobile Accesories</h3>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12" data-aos="fade-left">
          <div class="card">
            <img src="images/computer.png" alt="Book" class="card-img-top">
            <div class="card-body text-center">
              <h3 class="card-title">Computer Accesories</h3>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12" data-aos="fade-left">
          <div class="card">
            <img src="images/college.png" alt="Book" class="card-img-top">
            <div class="card-body text-center">
              <h3 class="card-title">College Accesories</h3>
            </div>
          </div>
        </div>
      </div>

    </div>
    </div>
  </section>

  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  {{!-- <script src="js/effect.js" charset="utf-8"></script> --}}
  <script>
    AOS.init();
  </script>
  <footer id="footer">
    <i class="social-icon fa-brands fa-facebook"></i>
    <i class="social-icon fa-brands fa-twitter"></i>
    <i class="social-icon fa-brands fa-instagram"></i>
    <i class="social-icon fa-solid fa-envelope"></i>

    <p>©2022 Copyright GradcaRT</p>
  </footer>
</body>

</html>
